import tabulate
import numpy as np

names = [['Месяц', 'День', 'Минимум', 'Максимум', 'Средняя', 'Дисперсия', 'Ночь', 'Минимум', 'Максимум', 'Средняя', 'Дисперсия']]

jan = np.array([[13,13,12,10,6,6,8,10,7,7,6,7,7,6,6,5,8,8,8,6,5,7,7,7,7,7,9,9,12,8,8], [9,10,10,8,2,2,2,3,4,3,1,2,1,2,2,1,3,2,1,2,0,1,1,1,1,0,0,3,5,3,4]])
feb = np.array([[10,12,9,10,9,11,8,11,12,9,8,8,12,11,10,13,12,15,12,12,9,11,11,12,10,10,10,11], [1,9,5,8,5,6,3,4,5,5,2,2,2,7,4,9,9,9,3,7,3,5,4,8,2,2,3,3]])
mar = np.array([[12,12,12,13,11,9,8,12,14,14,14,10,11,14,14,19,13,14,15,12,17,18,18,18,18,18,21,22,19,14,10], [5,6,8,7,4,2,0,0,5,6,7,7,7,4,9,9,7,6,6,2,8,8,7,8,8,7,7,10,12,9,3]])
apr = np.array([[5,8,9,10,14,13,13,9,9,13,18,20,15,21,20,18,21,20,17,19,20,21,16,18,16,15,202,2,18,18], [0,2,1,2,9,8,12,8,4,4,5,9,12,10,11,10,6,7,8,8,7,7,9,9,10,6,5,9,11,8]])
may = np.array([[16,18,19,18,18,21,19,20,24,24,23,21,24,22,29,25,29,28,26,27,26,23,18,19,20,22,22,19,17,18,20], [8,9,10,11,10,11,13,11,12,16,14,11,10,11,16,17,17,19,20,18,12,15,17,11,10,15,12,10,8,8,12]])
jun = np.array([[21,22,25,28,24,21,22,20,21,25,25,23,23,24,28,28,35,39,26,25,27,28,29,24,18,22,24,26,26,16], [11,11,16,17,18,13,16,16,13,17,17,13,12,12,15,18,20,23,18,13,14,16,16,16,18,13,15,14,15,15]])
jul = np.array([[23,26,25,26,26,25,23,27,29,27,30,34,37,32,28,30,34,40,42,25,30,31,29,35,29,25,27,28,27,29,32], [11,14,14,12,13,14,16,13,17,15,17,20,22,21,15,14,17,22,26,21,16,16,15,17,18,14,15,17,20,18,17]])
aug = np.array([[31,33,37,32,28,24,26,29,30,34,35,35,32,29,27,27,30,28,25,26,26,26,30,34,33,27,27,29,28,26,27], [17,16,19,19,15,15,15,16,18,18,19,19,20,20,18,19,18,18,16,13,15,18,20,19,22,18,14,15,15,16,16]])
sep = np.array([[30,27,25,28,32,28,23,23,20,21,25,29,26,28,24,17,17,20,19,19,20,21,21,16,19,16,16,15,16,18], [17,19,17,16,19,17,16,14,14,14,13,15,21,19,16,15,9,9,10,9,9,10,13,14,11,11,8,10,9,9]])
oct = np.array([[20,21,20,22,25,19,20,18,20,20,18,18,17,17,19,19,17,21,24,23,21,21,23,20,20,22,23,24,25,21,21], [13,14,10,10,13,11,10,11,8,13,9,9,13,14,14,14,16,15,15,17,15,14,15,16,13,15,15,18,17,16,15]])
nov = np.array([[18,15,15,12,13,13,16,17,15,15,16,18,17,14,11,14,14,12,12,10,9,10,11,12,12,10,10,11,10,9], [12,8,11,9,7,9,11,12,11,8,8,11,9,9,9,9,11,8,6,5,6,5,6,7,8,7,7,8,5,4]])
dec = np.array([[9,5,6,4,4,5,7,4,4,7,3,4,2,0,2,6,4,5,10,12,12,14,15,11,14,11,8,11,11,15,16], [4,3,3,1,4,2,2,1,-1,-1,-1,-1,-2,-2,-4,-2,-2,-3,4,10,8,11,11,10,9,11,4,7,9,6,14]])

year = [jan, feb, mar, apr, may, jun, jul, aug, sep, oct, nov, dec]
yearNAME = ['Январь', 'Февраль', 'Март', 'Апрель', 'Май', 'Июнь', 'Июль', 'Август', 'Сентябрь', 'Октябрь', 'Ноябрь', 'Декабрь']
n = 0

def data(DAY,NIGHT):
    return DAY.min(), DAY.max(), float(DAY.mean()), DAY.var(), NIGHT.min(), NIGHT.max(), float(NIGHT.mean()), NIGHT.var()

def dann(DAY,NIGHT,NAME):
    mind, maxd, avgd, vard, minn, maxn, avgn, varn = (data(DAY, NIGHT))
    if maxd > 0: maxd = '+' + str(maxd)
    if mind > 0: mind = '+' + str(mind)
    if avgd > 0: avgd = '+' + str("%.1f" % avgd)
    else: avgd = str("%.1f" % avgd)
    if maxn > 0: maxn = '+' + str(maxn)
    if minn > 0: minn = '+' + str(minn)
    if avgn > 0: avgn = '+' + str("%.1f" % avgn)
    else: avgn = str("%.1f" % avgn)
    names.append([str(NAME), 'день', mind, maxd, avgd, str("%.2f" % vard), 'ночь', minn, maxn, avgn, str("%.2f" % varn)])

for i in year:
    dann(i[0], i[1], yearNAME[n])
    n+=1
print(tabulate.tabulate(names, tablefmt="simple_grid", stralign='center'))
